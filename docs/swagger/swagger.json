    "definitions": {
        "account.Account": {
            "type": "object",
            "properties": {
                "balance": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "currency": {
                    "$ref": "#/definitions/account.AccountCurrency"
                },
                "id": {
                    "type": "integer"
                },
                "owner_id": {
                    "type": "integer"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "account.AccountCurrency": {
            "type": "string",
            "enum": [
                "THB",
                "USD"
            ],
            "x-enum-varnames": [
                "CurrencyTHB",
                "CurrencyUSD"
            ]
        },
        "accounthandler.CreateAccountReq": {
            "type": "object",
            "required": [
                "currency"
            ],
            "properties": {
                "currency": {
                    "type": "string",
                    "enum": [
                        "THB",
                        "thb",
                        "USD",
                        "usd"
                    ],
                    "example": "THB"
                }
            }
        },
        "entry.Entry": {
            "type": "object",
            "properties": {
                "account_id": {
                    "type": "integer"
                },
                "amount": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                }
            }
        },
        "response.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "response.NoContentResponse": {
            "type": "object"
        },
        "transfer.Transfer": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "integer"
                },
                "created_at": {
                    "type": "string"
                },
                "from_account_id": {
                    "type": "integer"
                },
                "id": {
                    "type": "integer"
                },
                "to_account_id": {
                    "type": "integer"
                }
            }
        },
        "transferhandler.TransferReq": {
            "type": "object",
            "required": [
                "amount",
                "currency",
                "from_account_id",
                "to_account_id"
            ],
            "properties": {
                "amount": {
                    "type": "integer",
                    "example": 10
                },
                "currency": {
                    "type": "string",
                    "enum": [
                        "THB",
                        "USD"
                    ],
                    "example": "THB"
                },
                "from_account_id": {
                    "type": "integer",
                    "minimum": 1,
                    "example": 1
                },
                "to_account_id": {
                    "type": "integer",
                    "minimum": 1,
                    "example": 2
                }
            }
        },
        "transferusecase.TransferResult": {
            "type": "object",
            "properties": {
                "from_account": {
                    "$ref": "#/definitions/account.Account"
                },
                "from_entry": {
                    "$ref": "#/definitions/entry.Entry"
                },
                "to_account": {
                    "$ref": "#/definitions/account.Account"
                },
                "to_entry": {
                    "$ref": "#/definitions/entry.Entry"
                },
                "transfer": {
                    "$ref": "#/definitions/transfer.Transfer"
                }
            }
        },
        "userhandler.LoginReq": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user1@mail.com"
                },
                "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "123456"
                }
            }
        },
        "userhandler.RefreshTokenReq": {
            "type": "object",
            "required": [
                "refresh_token"
            ],
            "properties": {
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "userhandler.RegisterReq": {
            "type": "object",
            "required": [
                "email",
                "first_name",
                "last_name",
                "password",
                "username"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "john@mail.com"
                },
                "first_name": {
                    "type": "string",
                    "example": "john"
                },
                "last_name": {
                    "type": "string",
                    "example": "doe"
                },
                "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "pass1234"
                },
                "username": {
                    "type": "string",
                    "minLength": 4,
                    "example": "johndoe"
                }
            }
        },
        "userusecase.TokenResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}